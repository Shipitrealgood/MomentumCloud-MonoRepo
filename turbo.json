{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "start": {
      "dependsOn": [
        "build"
      ]
    },
    "clean": {
      "cache": false
    },
    "@momentum/shared-utils#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "tsconfig.tsbuildinfo"
      ]
    },
    "@mcp-agent/orchestrator-host#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "tsconfig.tsbuildinfo"
      ]
    },
    "@mcp-agent/auth-mcp-server#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "tsconfig.tsbuildinfo"
      ]
    },
    "ease-mcp-server#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "tsconfig.tsbuildinfo"
      ],
      "env": [
        "EASE_EMAIL",
        "EASE_PASSWORD",
        "EASE_2FA_SECRET"
      ]
    },
    "@mcp-agent/salesforce-mcp-server#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "tsconfig.tsbuildinfo"
      ],
      "env": [
        "SALESFORCE_ACCESS_TOKEN",
        "SALESFORCE_INSTANCE_URL"
      ]
    },
    "@momentum-cloud/crm#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "tsconfig.tsbuildinfo"
      ],
      "env": [
        "DATABASE_URL",
        "NODE_ENV"
      ]
    },
    "@momentum/momentum-pdf#build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "tsconfig.tsbuildinfo"
      ],
      "env": [
        "PDF_FILLER_PORT"
      ]
    }
  }
}